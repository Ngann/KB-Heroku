type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  email: String! @unique
  password: String!
  vendors: [Vendor!]!
  customers: [Customer!]!
  accounts: [Account!]!
  bills: [Bill]
}

type Vendor {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  contact: String!
  address: String!
  addressTwo: String!
  city: String!
  state: String!
  country: String!
  postedBy: User
  accounts: [Account!]!
  bills: [Bill]
}

type Customer {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  contact: String!
  postedBy: User
  vendorId: Vendor
}

type Bill {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  vendor: String!
  date: String!
  account: String!
  amount: Int!
  postedBy: User
  vendorId: Vendor
  accountId: Account
  paymentStatus: Balance
  paymentType: Payment
  status: Status
}

type Invoice {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  customer: String!
  date: String!
  account: String!
  amount: Int!
  postedBy: User
}

type Account {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  number: String!
  postedBy: User
  bills: [Bill]
  vendors: [Vendor]
  accountCategory: AccountCategory
  accountType: AccountType
  generalJournal: GeneralJournal
}

type GeneralJournal {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  date: DateTime!
  debitAmount: Float!
  creditAmount: Float!
  postedBy: User
  bills: [Bill]
  vendors: [Vendor] 
  accounts: [Account]
}

enum Status{
  Active
  Inactive
  Open
  Close
}

enum Balance{
  Paid
  Open
  PartialPayment
}

enum Payment{
  CreditCard
  Bank
  Cash
  EFT
  Checks
}

enum AccountType{
  Debit
  Credit
}

enum AccountCategory{
  Assets
  Liability
  Liablity
  Revenue
  Expense
}
